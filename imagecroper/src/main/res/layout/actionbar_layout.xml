<?xml version="1.0" encoding="utf-8"?>

<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/background_white"
    android:gravity="center"
    android:orientation="vertical">

    <carbon.widget.RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="center">

        <carbon.widget.RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:minWidth="50dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:textAlignment="gravity"
            app:carbon_cornerRadius="25dp"
            app:carbon_elevation="0dp"
            app:carbon_rippleColor="#5ccccccc"
            app:carbon_rippleStyle="borderless">

            <carbon.widget.TextView
                android:id="@+id/left_button_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textSize="17sp"
                android:text="取消"
               android:lines="1"/>
        </carbon.widget.RelativeLayout>

        <carbon.widget.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <carbon.widget.TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                android:text="调整图片"
                android:textColor="@color/dark_gray"
                android:textSize="17sp"
                />
        </carbon.widget.LinearLayout>

        <carbon.widget.RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:textAlignment="gravity"
            app:carbon_cornerRadius="25dp"
            app:carbon_elevation="0dp"
            app:carbon_rippleColor="#5ccccccc"
            app:carbon_rippleStyle="borderless">

            <carbon.widget.TextView
                android:id="@+id/right_button_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textSize="17sp"
                android:text="完成"
                android:lines="1"/>
        </carbon.widget.RelativeLayout>

    </carbon.widget.RelativeLayout>

</carbon.widget.LinearLayout>